<%if leavedate.date && leavedate.created_at and leavedate.date>=Date.today %>
<tr>
<td>
  <span class="date"><%= leavedate.date.inspect %></span></td>
  <td>
  <div>
  <span class="content"><%= leavedate.description %></span>
  </div>
  </td>
  <% if current_user == leavedate.user %>
  <td>
  <div>
    <%= link_to content_tag(:i, "", class: "icon-trash icon-white") + "Delete", leavedate, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: leavedate.date.inspect, class: "remove_fields btn" %>
  </div>
  </td>
  <% end %>
</tr>
<%end%>
