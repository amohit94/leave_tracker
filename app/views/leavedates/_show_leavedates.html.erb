<% @leavedates ||= current_user.leavedates %>
  <div class="hero-unit">

    <% if @leavedates.any? and @leavedates.first.date? and (@leavedates.last.date==nil or @leavedates.last.date>=Date.today)%>

      <h3>Leaves (<%= @leavedates.count %>)</h3>
      <table class="table table-striped table-condensed" >
      <th style="width:200px">
      	Date
      </th>
      <th style="width:300px">
      	Description
      </th>
      <th style="width:300px">
      	Options
      </th>
        <%= render @leavedates %>
      </table>
    <% else %>
      No leaves to show.
    <% end %>
    
</div>
